<div class="recipe-page container">
  <div id="text-center">
    <div id="recipe-header">
      <h2>Categories:</h2>
    </div>
    <div class="recipe-dropdown">
      <select onChange="window.location.href=this.value">
        <option class='recipe_dropdown_text' value="" disabled selected>choose category</option>
        <% @categories.each do |category| %>
          <option value="/categories/<%=category.id%>/"><%=category.name%></option>
        <% end %>
      </select>
    </div>
    <br>
    <h3 class="recipe-h3" style="color: white;"><%=@category.name()%></h3>
    <br>
    <br>
    <% @recipes.each do |recipe| %>
    <hr>
      <h3 class="recipe-h3"><%=recipe.name%><span class="stars"> <%=recipe.rating%></span></h3>
      <div class="row">
        <div class="col-xs-1">
          <%=recipe.serving_size%>
        </div>
        <div class="col-xs-1 col-xs-offset-8">
          <%=recipe.preparation_time%>
        </div>
        <div class="col-xs-1">
          <%=recipe.cooking_time%>
        </div>
        <div class="col-xs-1">
          <%=recipe.total_time%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1">
          serving
        </div>
        <div class="col-xs-1 col-xs-offset-8">
          mins
        </div>
        <div class="col-xs-1">
          mins
        </div>
        <div class="col-xs-1">
          mins
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1">
          size
        </div>
        <div class="col-xs-1 col-xs-offset-8">
          prep
        </div>
        <div class="col-xs-1">
          cook
        </div>
        <div class="col-xs-1">
          total
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-5 ingredients-container">
          <h4 class='recipe-h4'>Ingredients</h4><br>
        </div>
        <div class="col-xs-5 col-xs-offset-2 ingredients-container">
          <h4 class='recipe-h4'>Instructions</h4><br>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-2 ingredients-container">
          <% recipe.units.each do |line| %>
            <span class="ingredient-display"><%= line.unit %></span><br>
          <% end %>
        </div>
        <div class="col-xs-4 ingredients-container">
          <% recipe.units.each do |line| %>
            <%= Ingredient.find(line.ingredient_id).name %><br>
          <% end %>
        </div>
        <div class="col-xs-5 col-xs-offset-1 ingredients-container">
          <%=recipe.instructions%><br>
        </div>
      </div>
      <br>
      <br>
    <% end %>
  </div>
  <br>
  <a class="a-back" href="/">back</a>
</div>
