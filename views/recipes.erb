<div class="recipe-page container">
<div id="recipe-header">
  <div id="text-center">
  <h2>Recipes:</h2>
</div>
<div class="recipe-dropdown">
  <select onChange="window.location.href=this.value">
    <option class='recipe_dropdown_text' value="" disabled selected>choose recipe</option>
    <% @recipes.each do |recipe| %>
      <option value="/recipes/<%=recipe.id%>/"><%=recipe.name%></option>
    <% end %>
  </select>
</div>
</div>
<br>
<br>
<a class="a-back" href="/">back</a>
</div>
